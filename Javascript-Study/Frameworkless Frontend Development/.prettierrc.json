{
  "tabWidth": 2,
  "singleQuote": true,
  "trailingComma": "none",
  "bracketSpacing": true,
  "semi": true,
  "useTabs": true,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "jsxBracketSameLine": true,
  "printWidth": 100,
  "overrides": [        
    {
      "files": ["**/*.html", "**/.*.json"],
      "options": {
        "tabWidth": 4,
        "useTabs": true
      }
    }
  ]
}
